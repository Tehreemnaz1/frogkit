@import '../_vars'

$grey = #d5d5d5
$bp-large = 1200px
$bp-medium = 822px
$image-height = 140px
$image-width = 180px

responsive-mixin()
  @media(min-width $bp-large)
    max-width 370px
    &__info
      padding 0 40px 20px 40px

  @media(max-width $bp-large - 1)
    max-width 320px
    &__info
      padding 0 30px 20px 30px
    &__action
      font-size 2.2rem !important
    &__history
      font-size 1.6rem
    &__period__label
      font-size 1.6rem

  @media(max-width $bp-md)
    max-width 270px
    &__info
      padding 0 25px 20px 25px
    &__price
      font-size 0.7rem !important
    &__action
      font-size 1.8rem !important

  @media(max-width $bp-medium)
    max-width 250px
    &__info
      padding 0 15px 20px 15px
    &__price
      font-size 0.7rem !important


storage-bundle-mixin()
  background-color white
  align-items unset !important
  &__info
    margin-top auto
  &__price
    font-size 0.8rem !important
  &__icon
    background: url('../assets/images/sf-cloud.svg') no-repeat
    background-size: $image-height $image-width
    height: $image-height
    width: $image-width
    background-position: center center
  &__for
    font-size 15px
    margin-bottom: 10px
  &__devices
    width: 80% !important
  &__period
    margin-bottom: 5px
    &__label
      padding-left 10px
  &__history
    margin 10px 0
    font-size 2rem

  @media(min-width $bp-sm)
    min-height 600px
    responsive-mixin()
    &__title
      margin 5px 0 10px 0
    &__container
      flex-basis: 100%
      border-radius 5px
      border 2px solid $grey
    &__info
      padding 0 15px

  @media(max-width $bp-sm - 1)
    min-width: 320px
    width 100%
    &__title
      display: none
    &__container
      flex-basis: 100%
