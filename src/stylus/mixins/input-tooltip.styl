input-tooltip-mixin()
  display flex
  align-items center
  position relative
  &__info-bubble
    position relative
    padding: 4px 8px
    display inline-flex
    max-width: 276px
    font-size: 14px
    min-height 42px
    border 1px solid #ccc
    color #414141
    margin-left 10px
    border-radius: 5px
    box-shadow 0 0 5px rgba(0,0,0,.2)
    background #fff
    &:after
      arrow-mixin()




arrow-mixin()
    content: ''
    box-sizing: border-box;
    border: 7px solid 
    border-color: transparent transparent #fff #fff
    transform-origin: 0 0
    transform: rotate(45deg)
    position: absolute
    top: 50%
    margin-top: -10px
    left: 0px
    box-shadow: -1px 1px #ccc


content-mixin()
  padding: 9px 14px