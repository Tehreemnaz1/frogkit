$text-color := #414141
$colors := {
  red: #e20d00
  white: #fff
}
color-variation()
  for $color in $colors
    &&--{$color}
      color: $colors[$color]

check-list-mixin()
  color: $text-color
  font-size 1.6rem
  line-height 2rem
  color-variation()
  & &__icon
    width 20px
    height 18px
    margin 5px
    display block
  &__placeholder
    font-size 2rem
    line-height 3rem 
    text-transform capitalize