@require '../_vars'

$colors := {
  red: #e20d00,
  orange: #f18713,
  blue: #2f82c4,
  grey: #A7A7A7
}

color-variation()
  for $color in $colors
    &&--{$color}
      fill: $colors[$color]

icon-mixin()
  display: inline-block
  /* IE/Edge do not bubble click events up from SVG elements, so allow clicks to pass through */
  pointer-events: none
  position: relative
  top: 2px
  fill: currentColor
  width: 20px
  height: 20px
  &&--block
    display: block
  color-variation()
