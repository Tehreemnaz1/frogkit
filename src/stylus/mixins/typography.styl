@require '../_vars'

$font-size-default = 2rem
$font-weight-default = 400
$font-sizes = 50, 38, 30, 25, 15
$font-weights = 700, 300

$colors-typography := {
  orange: {
    base: #f18713
  },
  blue: {
    base: #2f82c4
  },
  grey: {
    base: #414141,
    light: #7a7a7a
  }
}

font-size()
  for $size in $font-sizes
    &&--size-{$size}
      font-size: unit(($size / $font-size-root), 'rem')

font-weight()
  for $weight in $font-weights
    &&--weight-{$weight}
      font-weight: $weight

txt-mixin()
  font-family: $body-font-family
  font-weight: $font-weight-default
  font-size: $font-size-default
  color: $colors-typography.grey.base
  font-weight()
  font-size()
  &&--primary
    color: $colors-typography.orange.base
  &&--light
    color: $colors-typography.grey.light
