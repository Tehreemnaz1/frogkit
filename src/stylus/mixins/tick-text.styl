$text-color := #414141
$colors := {
  red: #e20d00
  white: #fff,
  black: #414141
}
color-variation()
  for $color in $colors
    &&--{$color}
      color: $colors[$color]

tick-text-mixin()
  color: $text-color
  font-size 1em
  color-variation()
  &__container
    flex-wrap: nowrap !important
  & &__icon
    width 20px
    height 16px
    margin 5px
    display block
  &__placeholder, &__placeholder--bold
    font-size 1.6em
    line-height 1.3em 
    // text-transform capitalize
    margin-bottom 2px
  &__placeholder--bold
    *
      font-weight 400
      font-size 0.8em
    &:first-child
      font-weight 700
