$button-skeleton
  padding: 0
  border-radius: 8px
  line-height: unset


$input-skeleton 
  padding: 0
  text-align: center
  outline: none
  vertical-align: middle
  border: 1px solid #ccc
  border-radius: 8px
  line-height: unset
  
  // hide arrows
  -moz-appearance: textfield
  &::-webkit-inner-spin-button
  &::-webkit-outer-spin-button
    -webkit-appearance: none
    margin: 0

small = {
  height: 30px
  width: 30px
  font-size: 16px
}

big = {
  height: 60px
  width: 60px
  font-size: 30px
}

number-input()
 & &__button
    &--small
      @extends $button-skeleton
      {small}
    &--big
      @extends $button-skeleton
      {big}
    
  & &__input
    &--small
      @extends $input-skeleton
      {small}
    &--big
      @extends $input-skeleton
      {big}
      