@require '../_vars'

legacy-browser-mixin()
  max-width: 700px
  min-height: 400px
  width 90%
  border-radius: 10px
  padding: 20px 40px
  background: linear-gradient(to bottom, #ffffff 0%, #dddddd 100%)
  font-size: 2rem
  color: #414141
  line-height: 2.8rem
  @media only screen and (max-width: $bp-sm - 1)
    padding: 15px
  &__title
    font-size: 1.5rem
    line-height 3rem
    font-weight: bold
    text-transform uppercase
  img 
    height 110px
    width @height
