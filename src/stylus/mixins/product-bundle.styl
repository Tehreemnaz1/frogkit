@import '../_vars'

$orange = #f18713
$grey = #d5d5d5
$bp-large = 1200px
$bp-medium = 822px


responsive-mixin()
  @media(min-width $bp-large)
    &__price
      font-size 0.8rem !important
    &__info
      padding 0 25px 20px 25px
    &__features, &__features--nhw, &__additional-features
      padding 5px 0 8px 48px
  
  @media(max-width $bp-large - 1)
    &__info
      padding 0 30px 20px 30px
    &__action
      font-size 1.8rem !important
    &__price
      font-size 0.76rem !important
    &__features, &__features--nhw, &__additional-features
      padding 7px 7px 8px 5%
      font-size 1rem

  @media(max-width $bp-md)
    &__info
      padding 0 15px 20px 15px
    &__price
      font-size 0.65rem !important
    &__action
      font-size 1.6rem !important
    &__features, &__features--nhw, &__additional-features
      padding 5 7px 0 5px 6%

  @media(max-width $bp-medium)
    &__info
      padding 0 15px 20px 15px
    &__price
      font-size 0.65rem !important

product-bundle-mixin()
  &__container, &__container--nhw, &__container--nhw-top
    flex-wrap: unset !important
    background-color white
  &__info
    margin-top auto
    a
      color #3180ca
      text-decoration none
      font-size 16px
  &__features, &__features--nhw
    padding 5px 0
  &__features
    background-color $orange
    &--nhw
      background-color $grey
  &__additional-features
    margin-top 5px

  @media(min-width $bp-sm)
    min-height 600px
    position relative
    responsive-mixin()
    &__top-seller
      position absolute
      color: white
      top -3px
      left @top
      height 109px
      z-index 100
      width @height
      background-image url('../assets/images/topseller.png')
      b
        position absolute
        transform rotate(-45deg)
        top: 25px
        font-size: 21px
        display: block
        left: 1px
    &__title
      margin 5px 0 10px 0
    &__price
      &__prefix, &__suffix
        max-width 62px
    &__container, &__container--nhw, &__container--nhw-top
      width: 100%
      height 100%
      flex-basis 100%
      border-radius 5px
      border 2px solid $orange
      align-items unset !important
      flex-wrap: nowrap
      &--nhw
        border 2px solid $grey
    
    @media(max-width $bp-md)
      &__price
        font-size 0.6rem !important


  @media(max-width $bp-sm - 1)
    min-width: 320px
    width 100%
    position relative
    &__title
      display: none
    &__features, &__features--nhw, &__additional-features
      display flex
      align-items center
      flex-direction column
      *
        font-weight normal !important
    &__container, &__container--nhw, &__container--nhw-top
      flex-basis 100%
      align-items unset !important
    &__feature-item
      font-size 1.2rem !important
    &__info
      padding 0 15px
    &__top-seller
      color: white
      width: 65px
      height: 65px
      position: absolute
      right: 15px
      bottom: 120px
      border-radius: 50%
      background-color: #e30613
      b
        visibility: hidden
        &:after
          visibility: visible
          color white
          content: 'Top-seller'
          position absolute
          transform rotate(-15deg)
          top: 8px
          font-size: 20px
          display: block
          left: 10px
